<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.EmployeeController" spacing="10" alignment="CENTER" prefWidth="600">
    <TableView fx:id="table" prefHeight="400">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nameCol" text="Name" prefWidth="200"/>
            <TableColumn fx:id="deptCol" text="Department" prefWidth="150"/>
            <TableColumn fx:id="salCol" text="Salary" prefWidth="100"/>
        </columns>
    </TableView>
    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Name"/>
        <TextField fx:id="deptField" promptText="Department"/>
        <TextField fx:id="salField" promptText="Salary"/>
        <Button text="Add" onAction="#addEmployee"/>
    </HBox>
</VBox>
